<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="vertical"
    tools:context=".ViewRecipe">

    <!--Recycler view for displaying
        our data from Firestore-->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/idRVRecipes"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!--Progress bar for showing loading screen-->
    <ProgressBar
        android:id="@+id/idProgressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true" />

    <Button
        android:id="@+id/idBtnRecipeRandom"
        android:layout_width="95dp"
        android:layout_height="60dp"
        android:layout_alignRight="@+id/idRVRecipes"
        android:layout_above="@id/idBtnRecipeDeleteMode"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:text="Random"
        android:textAllCaps="false" />
    <Button
        android:id="@+id/idBtnRecipeDeleteMode"
        android:layout_width="95dp"
        android:layout_height="60dp"
        android:layout_alignRight="@+id/idRVRecipes"
        android:layout_alignBottom="@+id/idRVRecipes"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:text="EDIT MODE"
        android:textAllCaps="true" />

</RelativeLayout>
